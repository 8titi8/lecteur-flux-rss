$(".unread").bind('ajax:success', function() {
  <% if @article['status'] == true %>
  $(this).replaceWith("<%= escape_javascript(link_to('Marquer comme non lu', article_path(id: @article['id'], status: false), method: :put, data: {remote: true}, class: 'unread ml-4 d-flex justify-content-end')) %>");
  <% elsif @article['status'] == false %>
  $(this).replaceWith("<%= escape_javascript(link_to('Marquer comme lu', article_path(id: @article['id'], status: true), method: :put, data: {remote: true}, class: 'unread ml-4 d-flex justify-content-end')) %>" );
  <% end %>
});
